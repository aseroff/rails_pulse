<div class="panel panel--danger">
  <div>
    <h3 class="text-sm bold">Analysis Failed</h3>
    <p class="text-sm mt-1">
      <%= error_message %>
    </p>
    <div class="mt-3">
      <%= button_to analyze_query_path(query), method: :post,
          data: { turbo_frame: "query_analysis" },
          class: "btn btn--sm" do %>
        Try Again
      <% end %>
    </div>
  </div>
</div>
